<div class="page profile">
	<div class="card">
		<img src="{{user.img}}" alt="Avatar" >
		<div class="container">
		    <h4><b>{{user.name}}</b></h4> 
			{{#ifeq user._id user_id}}
			    <form method="POST" action="/profile/photo" enctype="multipart/form-data">
		  			<button class="my_btn" onclick="click()" type="button">Выбрать фото</button><br><br>
		 			<input type="submit" value="Загрузить"/>
		  			<input class="hidden" id="file" type="file" name="avatar"/><br><br>
				</form>
			{{/ifeq}}	
	  	</div>
	</div>

	<div class="info">
		{{user.info}}
		{{#ifeq user._id user_id}}
			<p>
				<a href="/profile/edit">
					<button class="edit-profile btn-primary">Редактировать</button>
				</a>
			</p>
		{{/ifeq}}
	</div>
</div>

<div class="posts">
	{{> posts}}
</div>

<script> 
	document.querySelector(".my_btn").onclick = () => {
		document.querySelector("#file").click();
	};
</script>
