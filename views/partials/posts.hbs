{{#if posts.length}}
{{#each posts}}
<div class="card" >
   <div class="card-top">
      <a href="/users/{{author._id}}">
         <div class="post-img">
            <img src="{{author.img}}">
         </div>
         <div class="author">
            <p>{{author.name}}</p>
         </div>
      </a> 
      <div class="date">
         <p>{{moment date "DD.MM.YYYY - HH:mm"}}</p>
      </div>
   </div>
   <div class="card-center">
      <div class="name">
         <a href="/posts/{{_id}}">{{name}}</a>
      </div>
      <div class="brd">
         <p>{{content}}</p>
      </div>
   </div>
   <div class="card-bot">
   	<a href="/posts/{{_id}}">
         <button class="btn btn-primary">{{comments}} комментов</button>

      </a>
   	{{#ifeq author._id @root.user_id}}
         <form action="/posts/{{_id}}" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button class="btn">Редактировать</button>
         </form>
         <form action="/posts/remove" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button class="btn red">Удалить</button>
         </form>
      {{/ifeq}}
   </div>
</div>
{{/each}}
{{/if}}